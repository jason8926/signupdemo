<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">


    <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="注册"
            android:textColor="@android:color/white"
            android:id="@+id/register"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="39dp"
            android:layout_alignTop="@+id/signup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="登录"
            android:id="@+id/signup"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"/>

    <Button android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="短信验证码"
            android:id="@+id/smscode"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/register"
            android:layout_alignLeft="@+id/register"
            android:layout_alignStart="@+id/register"/>

    <Button android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:layout_alignTop="@+id/smscode"
            android:layout_alignRight="@+id/signup"/>
</RelativeLayout>
